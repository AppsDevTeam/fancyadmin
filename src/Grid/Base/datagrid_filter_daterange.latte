{**
 * @param Filter                $filter
 * @param Nette\Forms\Container $input
 * @param string                $iconPrefix       Icon prefix (fa fa-)
 *}

{var $container = $input}

{if $outer}
	<div class="form-group-filter mr-2">
		{label $container['from'] /}
		<div class="row no-gutters">
			<div class="col-sm-6">
				{input $container['from'], data-dateinput-type => 'date', class => 'form-control'}
			</div>
			<div class="col-sm-6">
				{input $container['to'], data-dateinput-type => 'date', class => 'form-control'}
			</div>
		</div>
	</div>
{else}
	<div class="datagrid-col-filter-date-range form-inline">
		<div class="input-group">
			{input $container['from'], data-dateinput-type => 'datetime', placeholder => $translator->translate('common.from')}
			<label n:name="$container['from']" class="input-group-addon input-group-addon-first ml-1"><i class="{$iconPrefix}calendar"></i></label>

			<div class="input-group-addon datagrid-col-filter-datte-range-delimiter">-</div>

			{input $container['to'], data-dateinput-type => 'datetime', placeholder => $translator->translate('common.to')}
			<label n:name="$container['to']" class="input-group-addon ml-1"><i class="{$iconPrefix}calendar"></i></label>
		</div>
	</div>
{/if}
