{form form}
	{var ADT\FancyAdmin\Model\Administration $administration = $presenter->getAdministration()}
	{include errors}

	<div class="inputs-wrap">
		{formPair email}
		{formPair password}
		{if $administration->isLostPasswordEnabled()}
			<a href="{plink "Sign:lostPassword"}" class="linkInForm">
				<span class="d-none d-sm-inline">{_fcadmin.forms.signIn.links.lostPassword}</span>
			</a>
		{/if}
		{input submit}
	</div>
{/form}